datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trainee {
  id        String   @id @default(cuid())   // معرف فريد لكل متدرب
  name      String   @db.VarChar(255)       // تحديد الطول الافتراضي للحقل
  password  String   @db.VarChar(255)       // كلمة المرور مخزنة بشكل نص مشفر لاحقًا
  createdAt DateTime @default(now())        // تاريخ التسجيل
}