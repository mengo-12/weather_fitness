datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trainee {
  id        String   @id @default(cuid())   // معرف فريد لكل متدرب
  name      String   @db.VarChar(255)       // اسم المتدرب
  phone     String   @unique @db.VarChar(20)        // رقم الجوال
  age       Int                               // العمر
  agreed    Boolean  @default(false)         // الموافقة على الشروط
  hasSeenInstructions Boolean @default(false)
  createdAt DateTime @default(now())         // تاريخ التسجيل
  
  trainingResults TrainingResult[]
}


model TrainingResult {
  id            String   @id @default(cuid())
  traineeId     String   @unique 
  trainee       Trainee  @relation(fields: [traineeId], references: [id])
  trainingTime  String
  sleepHours    String
  readiness     String
  fieldType     String
  fieldOther    String?
  effortLevel   String
  bodyFeeling   String
  temperature   Float    @default(0)   // 🔹 لا تكون null
  humidity      Float    @default(0)
  city          String   @default("غير محدد")
  condition     String   @default("غير معروف")
  createdAt     DateTime @default(now())
}